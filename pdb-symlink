set -e
set -u

for tag
do
	cachedir="$HOME/.cache/picture-db-scripts/tags/$tag"

	rm -rf "$cachedir"
	mkdir -p "$cachedir"
	find "$HOME/Bilder/Bilder_Datenbank" -type f -name "*#$tag*" -print -exec ln -sr {} "$cachedir/" \;
done
